
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Board{
  id                     Int                 @id @default(autoincrement())
  imgUrl                 String?
  title                  String
  category               String
  createdAt              DateTime            @default(now())
  author                 String
  cards                  Card[]                  
}
model Card{
  id                     Int                 @id @default(autoincrement())
  title                  String
  description            String
  owner                  String
  board                  Board               @relation(fields: [boardId], references: [id])
  boardId                Int                 
  createdAt              DateTime            @default(now())
}
